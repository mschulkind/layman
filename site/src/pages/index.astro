            },
            autotiling: {
                title: 'Autotiling',
                desc: 'Alternates between horizontal and vertical splits based on window dimensions, creating a natural spiral-like pattern that adapts to your screen.',
                features: [
                    'Automatic split direction based on container size',
                    'Natural, balanced layouts without configuration',
                    'Configurable depth limit',
                    'Great for general-purpose workspaces',
                    'Inspired by nwg-piotr\'s autotiling'
                ],
                visual: '<div style="display:grid;grid-template-columns:1fr 2fr;gap:0.5rem;height:100%"><div style="background:linear-gradient(135deg,var(--gradient-1),var(--gradient-2));border-radius:10px;display:flex;align-items:center;justify-content:center;color:white;font-weight:600">1</div><div style="display:grid;grid-template-rows:1fr 1fr;gap:0.5rem"><div style="background:var(--bg-tertiary);border:1px solid var(--border);border-radius:8px;display:flex;align-items:center;justify-content:center;color:var(--text-muted)">2</div><div style="display:grid;grid-template-columns:1fr 1fr;gap:0.5rem"><div style="background:var(--bg-tertiary);border:1px solid var(--border);border-radius:8px;display:flex;align-items:center;justify-content:center;color:var(--text-muted)">3</div><div style="background:var(--bg-tertiary);border:1px solid var(--border);border-radius:8px;display:flex;align-items:center;justify-content:center;color:var(--text-muted)">4</div></div></div></div>'
            },
            grid: {
