                features: [
                    'Windows grouped into tabbed pairs',
                    'Maximizes visible space per window',
                    'Easy tab switching with keybindings',
                    'Clean, organized workspace',
                    'Great for compare workflows'
                ],
                visual: '<div style="display:grid;grid-template-columns:1fr 1fr;gap:0.75rem;height:100%"><div style="display:flex;flex-direction:column;border-radius:10px;overflow:hidden;border:1px solid var(--border)"><div style="background:var(--bg-tertiary);padding:0.4rem 0.75rem;display:flex;gap:0.25rem;border-bottom:1px solid var(--border)"><span style="background:var(--accent);color:white;padding:0.15rem 0.5rem;border-radius:4px;font-size:0.7rem">Tab A</span><span style="color:var(--text-muted);padding:0.15rem 0.5rem;font-size:0.7rem">Tab B</span></div><div style="flex:1;background:linear-gradient(135deg,var(--gradient-1),var(--gradient-2));display:flex;align-items:center;justify-content:center;color:white;font-weight:600">Window A</div></div><div style="display:flex;flex-direction:column;border-radius:10px;overflow:hidden;border:1px solid var(--border)"><div style="background:var(--bg-tertiary);padding:0.4rem 0.75rem;display:flex;gap:0.25rem;border-bottom:1px solid var(--border)"><span style="color:var(--text-muted);padding:0.15rem 0.5rem;font-size:0.7rem">Tab C</span><span style="background:var(--accent);color:white;padding:0.15rem 0.5rem;border-radius:4px;font-size:0.7rem">Tab D</span></div><div style="flex:1;background:var(--bg-tertiary);display:flex;align-items:center;justify-content:center;color:var(--text-muted)">Window D</div></div></div>'
            }
        };
        
        // Tab switching
        document.querySelectorAll('.layout-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                const key = tab.dataset.layout;
                const data = layouts[key];
                
                document.querySelectorAll('.layout-tab').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                document.getElementById('layout-title').textContent = data.title;
                document.getElementById('layout-desc').textContent = data.desc;
                const visual = document.getElementById('layout-visual');
                visual.classList.add('switching');
                setTimeout(() => {
                    visual.innerHTML = data.visual;
                    visual.classList.remove('switching');
                }, 150);
                
                const list = document.getElementById('layout-features-list');
                list.innerHTML = data.features.map(f => '<li><i data-lucide="check"></i> ' + f + '</li>').join('');
                lucide.createIcons();
            });
        });
        
        // Initialize first layout
        document.getElementById('layout-visual').innerHTML = layouts.masterstack.visual;
    </script>
